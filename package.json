{
  "name": "flatpickr-bulma-theme",
  "version": "0.2.0",
  "description": "Flatpicker theme for Bulma",
  "main": "flatpickr-bulma.scss",
  "scripts": {
    "postinstall": "node scripts/styl2scss.js",
    "compile": "node scripts/build.js src/index.scss dist/flatpickr-bulma.css",
    "build:main": "node scripts/build.js -m src/index.scss dist/flatpickr-bulma.css",
    "compile:plugin": "node scripts/build.js -p",
    "build:plugin": "node scripts/build.js -m -p",
    "build": "npm-run-all -p build:**",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mymth/flatpickr-bulma-theme.git"
  },
  "keywords": [
    "flatpickr",
    "bulma",
    "theme",
    "css"
  ],
  "author": "Hidenao Miyamoto <miyamo.4@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/mymth/flatpickr-bulma-theme",
  "devDependencies": {
    "autoprefixer": "^9.7.3",
    "bulma": "^0.8.0",
    "css-declaration-sorter": "^5.0.0",
    "csso-cli": "^2.0.2",
    "flatpickr": "^4.6.3",
    "inflected": "^2.0.4",
    "minimist": "^1.2.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.3",
    "postcss-node-sass": "^2.1.8",
    "shortcut-buttons-flatpickr": "^0.3.0"
  },
  "dependencies": {}
}
